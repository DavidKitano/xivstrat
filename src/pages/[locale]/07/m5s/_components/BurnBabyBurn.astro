---
import Buff from '@/components/Buff.astro'

import burn_baby_burn from '@/assets/buff/07/m5s/214280.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={burn_baby_burn}
  name="Burn Baby Burn"
  nameVariant="yellow"
  description="Consumed by the Disco Infernal and condemned to strike a groovy pose when this effect expires. Failure to stand alone in the spotlight when posing will result in damage taken."
  tag={tag}
  hover={hover}
  class={className}
/>
